<%- include ('../partials/header');%>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= campgrounds.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campgrounds._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campgrounds.name%>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= campgrounds.description%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= campgrounds.price%>" min="1" step="1">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back To campgrounds</a>
        </div>
    </div>
</div>
<%- include ('../partials/footer');%>
